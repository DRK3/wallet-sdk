{
  "authorization_endpoint":"https://server.example.com/oidc/authorize",
  "credential_endpoint":"https://server.example.com/oidc/credential",
  "credential_issuer":{
    "display":[
      {
        "locale":"en-US",
        "name":"Example University"
      },
      {
        "name":"サンプル大学",
        "locale":"jp-JA"
      }
