  "credentials_supported":{
    "university_degree":{
      "claims":{
        "id":{
          "display":[
            {
              "name":"ID",
              "locale":"en-US"
            }
          ],
          "value_type":"string"
        },
        "given_name":{
          "display":[
            {
              "name":"Given Name",
              "locale":"en-US"
            }
          ],
          "value_type":"string"
        },
        "surname":{
          "display":[
            {
              "name":"Surname",
              "locale":"en-US"
            }
          ],
          "value_type":"string"
        },
        "gpa":{
          "display":[
            {
              "name":"GPA",
              "locale":"en-US"
            }
          ],
          "value_type":"number"
        }
      },
      "cryptographic_binding_methods_supported":[
        "ion"
      ],
      "cryptographic_suites_supported":[
        "ECDSASecp256k1DER"
